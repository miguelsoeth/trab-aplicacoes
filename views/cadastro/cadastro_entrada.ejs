<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro de Usuário</title>
    <style>
       @import url('https://fonts.googleapis.com/css2?family=Manrope:wght@200..800&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap');
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 110vh;
            margin: 0;
            padding: 0;
        }
        #lista-usuarios {
            width: 60%;
            height: 100vh;
            padding: 0px 50px;
        }
        #lista-usuarios ul {
            padding: 0px;
        }
        #lista-usuarios ul li {
            position: relative;
            padding: 15px;
            list-style-type: none;
            display: flex;
            flex-direction: column;
            flex-wrap: wrap;
            gap: 10px;
            margin-top: 20px;
            border-radius: 20px;
            background-color: white;
            box-shadow: rgba(0, 0, 0, 0.16) 0px 3px 6px;

            

            .containerInformacoes{
                position: relative;
                width: 100%;
                display: flex;
                gap: 20px;

                article {
                position: relative;
                width: 50%;
            }
                
            }

            .filhoInformacoes{
                max-width: 100%;
                white-space: nowrap;
                /* width: min-content; */
                padding: 10px;
                background-color: rgb(231, 223, 232);
                border: 1px solid #022840;
                border-radius: 10px;
            }
        }
        label {
            font-family: "Roboto";
            display: block;
            margin-top: 5px;
        }
        input[type="text"],
        input[type="date"],
        input[type="number"],
        input[type="email"],
        input[type="password"],
        select {
            width: 100%;
            padding: 8px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 3px;
            box-sizing: border-box;
        }

        button[type="submit"] {
            background-color: #2e6db1;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
            width: 100%;
            transition: background-color 0.2s ease;
        }
        button[type="submit"]:hover {
            background-color: #007bff;
        }

        .containerBotoes{
            margin-top: 30px;
        }

        #botao-editar {
            float: right;
            color: white;
            border: none;
            border-radius: 4px;
            padding: 8px 15px;
            cursor: pointer;
            background-color: #005fc4;
            transition: background-color 0.2s ease;

            &:hover{
                background-color: #007bff;
            }
        }
        #botao-deletar {
            float: right;
            color: white;
            border: none;
            border-radius: 4px;
            padding: 8px 15px;
            margin-right: 10px;
            cursor: pointer;
            background-color: darkred;
            transition: background-color 0.2s ease;

            &:hover{
                background-color: rgb(189, 29, 29);
            }
        }
        h1 {
            display: flex;
            font-family: "Manrope";
        }
        #home {
            text-decoration: none;
            font-size: 15px;
            margin-right: 20px;
            border-radius: 4px;
            cursor: pointer;
            color: white;
            background-color: #2e6db1;
            padding: 10px;
            border: none;
            transition: background-color 0.2s ease;

            &:hover{
                background-color: #007bff;
            }
        }

        #cadastro-usuario{
            display: flex;
            flex-direction: column;
            padding: 15px;
            background-color: white;
            box-shadow: rgba(0, 0, 0, 0.16) 0px 3px 6px;
            border-radius: 20px;
            margin-top: 290px;

            h2{
                margin-top: 0px;
            }
        }
        footer{
            height: 100px;
            width: 100%;
        }
    </style>
</head>
<body>    
    <div id="lista-usuarios">
        
        <h1><a href="/admin" id="home">Home</a> <a href="/lancamentos" id="home">Lançamentos</a> Lista de Receitas/Despesas</h1>
        <ul>
            <% 
            entries.sort((a, b) => new Date(a.due_date) - new Date(b.due_date));
            entries.forEach(entry => { %>
                <li>
                    <section class="containerInformacoes">
                        <article>
                            <label><strong>ID</strong></label>
                            <div class="filhoInformacoes">
                               <span id="id"><%= entry.id %></span>
                            </div>
                        </article>
                        <article>
                            <label><strong>Tipo</strong></label>
                            <div class="filhoInformacoes">
                                 <%= entry.type %>
                            </div>
                        </article>
                    </section>  
                    
                    
                    <section class="containerInformacoes">
                        <article>
                            <label><strong>Categoria</strong></label>
                            <div class="filhoInformacoes">
                                 <%= entry.categories %>
                            </div>
                        </article>
                        <article>
                            <label><strong>Descrição</strong></label>
                            <div class="filhoInformacoes">
                                 <%= entry.description %>
                            </div>
                        </article>
                    </section>

                    <section class="containerInformacoes">
                        <article>
                            <label><strong>Valor</strong></label>
                            <div class="filhoInformacoes">
                                 <%= entry.value %>
                            </div>
                        </article>
                        <article>
                            <label><strong>Conta</strong></label>
                            <div class="filhoInformacoes">
                                <%= entry.account %>
                            </div>
                        </article>
                    </section>

                    <section class="containerInformacoes">
                        <article>
                            <label><strong>Data de vencimento</strong></label>
                            <div class="filhoInformacoes">
                                <%= entry.due_date %>
                            </div>
                        </article>
                        <article>
                            <label><strong>Data de pagamento</strong></label>
                            <div class="filhoInformacoes">
                                 <%= entry.payment_date %>
                            </div>
                        </article>
                    </section>

                    <section class="containerInformacoes">
                        <article>
                            <label><strong>Status</strong></label>
                            <div class="filhoInformacoes">
                                <%= entry.status %>
                            </div>
                        </article>
                        <article>
                            <label><strong>Comentários</strong></label>
                            <div class="filhoInformacoes">
                                 <%= entry.comments %>
                            </div>
                        </article>
                    </section>
                   
                    <section class="containerBotoes">
                        <button id="botao-editar">Editar</button>
                        <button id="botao-deletar">Deletar</button><br>
                    </section>         
                </li>                
            <% }); %>
        </ul>
        <footer>
            
        </footer>
    </div>
    <div id="cadastro-usuario">
        <h2>Cadastro de Receita/Despesa</h2>
        <form id="userForm" action="/admin/cadastrar-entrada" method="POST">
            <label for="type">Tipo:</label>
            <select id="type" name="type" required>
                <option value="Receita">Receita</option>
                <option value="Despesa">Despesa</option>
            </select><br>

            <label for="categories">Categoria:</label>
            <select id="categories" name="categories" required>
            </select><br>

            <label for="description">Descriçao:</label>
            <input type="text" id="description" name="description" required><br>

            <label for="value">Valor:</label>
            <input type="number" id="value" name="value" step="0.1" required><br>

            <label for="due_date">Data vencimento:</label>
            <input type="date" id="due_date" name="due_date" required><br>

            <label for="payment_date">Data pagamento:</label>
            <input type="date" id="payment_date" name="payment_date"><br>
            
            <label for="account">Conta:</label>
            <select id="account" name="account" required>
                <option value="Conta Corrente">Conta Corrente</option>
                <option value="Conta Poupança">Conta Poupança</option>
            </select><br>

            <label for="status">Status:</label>
            <select id="status" name="status" required>
                <option value="Lancada">Lancada</option>
                <option value="Confirmada">Confirmada</option>
                <option value="Paga">Paga</option>
                <option value="Cancelada">Cancelada</option>
            </select><br>

            <label for="comments">Comentarios:</label>
            <select id="comments" name="comments" required>
                <option value="on">On</option>
                <option value="off">Off</option>
            </select><br>

            <button type="submit">Cadastrar</button>
            
        </form>
        
    </div>    
    
    <script>
        function deleteEntry(id) {
            if (confirm("Tem certeza que deseja deletar essa entrada?")) {
                fetch(`/admin/deletar-entrada/${id}`, {
                    method: 'DELETE'
                })
                .then(response => {
                    if (response.ok) {
                        location.reload();
                    } else {
                        throw new Error('Erro ao deletar');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                });
            }
        }
        function editEntry(id) {
            console.log("editando entrada ", id);
            window.location.href = `/admin/editar-entrada/${id}`;
        }
        document.querySelectorAll('button#botao-deletar').forEach(button => {
            button.addEventListener('click', () => {
                const entryId = button.parentNode.parentNode.querySelector('#id').textContent;            
                deleteEntry(entryId);
            });
        });

        document.querySelectorAll('button#botao-editar').forEach(button => {
            button.addEventListener('click', () => {
                const entryId = button.parentNode.parentNode.querySelector('#id').textContent;
                editEntry(entryId);
            });
        });

        const typeDropdown = document.getElementById('type');
        const categoriesDropdown = document.getElementById('categories');
        const categoriesList = <%- JSON.stringify(categoriesList) %>;

        typeDropdown.addEventListener('change', () => {
        const selectedType = typeDropdown.value;
        categoriesDropdown.innerHTML = "";
        const filteredCategories = categoriesList.filter(category => category.type === selectedType);
        filteredCategories.forEach(category => {
                const option = document.createElement('option');
                option.value = category.description;
                option.textContent = category.description;
                categoriesDropdown.appendChild(option);
            });
        });
        typeDropdown.dispatchEvent(new Event('change'));
    </script>
</body>
</html>
