<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <title>Document</title>
    <style>
         @import url('https://fonts.googleapis.com/css2?family=Manrope:wght@200..800&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap');

body{
    display: flex;
    flex-direction: column;

    footer{
        position: absolute;
        bottom: -150px;
    }
}
    .modal {
      display: none; 
      position: fixed; 
      z-index: 1; 
      left: 0;
      top: 0;
      width: 100%;
      height: 100vh;
      overflow: auto; 
      background-color: rgba(0,0,0,0.4); 
    }
    
    .modal-content {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-self: center;
      background-color: #fefefe;
      margin: 150px auto;
      padding: 20px;
      border: 1px solid #888;
      width: 80%;
      border-radius: 20px;
      box-shadow: rgba(0, 0, 0, 0.16) 0px 3px 6px;
      position: relative;
    }
    
    .close {
      color: #aaa;
      float: right;
      font-size: 28px;
      font-weight: bold;
      position: absolute;
      right: 20px;
      top: 15px;
    }
    
    .close:hover,
    .close:focus {
      color: black;
      text-decoration: none;
      cursor: pointer;
    }

    .title {
        justify-content: center;
        align-items: center;
    }

    h3{
        font-size: 20px;
        font-family: "Manrope";
        font-weight: bold;
    }

    tr{
        border-top-left-radius: 10px;
        border-bottom-left-radius: 10px;
    }

    tr:nth-child(even){
        background-color: rgb(201, 201, 201);
    }

    tr:nth-child(odd){
        background-color: rgb(255, 255, 255);
    }

    .thVencimento{
       
        text-align: center;
    }

    td{
        text-align: center;
        padding: 5px;
        font-family: "Roboto";
    }

    table{
        border-collapse: collapse;
    }
    
    </style>
</head>
<body>
    <div id="myModal" class="modal">
        <div class="modal-content">            
            <span class="close">&times;</span>
            <h3 class="title">Lançamentos do Dia:</h3>
            <table>
                <thead>
                    <tr>
                        <th>Tipo</th>
                        <th>Categorias</th>
                        <th>Descrição</th>
                        <th>Valor</th>
                        <th class="thVencimento">Data de Vencimento</th>
                        <th>Data de Pagamento</th>
                        <th>Conta</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody class="tbody-today">                    
                </tbody>
            </table>
            <h3 class="title">Lançamentos em Atraso:</h3>
            <table>
                <thead>
                    <tr>
                        <th>Tipo</th>
                        <th>Categorias</th>
                        <th>Descrição</th>
                        <th>Valor</th>
                        <th>Data de Vencimento</th>
                        <th>Data de Pagamento</th>
                        <th>Conta</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody class="tbody-overdue">                    
                </tbody>
            </table>           
        </div>
    </div>
    
    <script>
        function populateModalToday(data) {
            var modalContent = document.querySelector('.tbody-today');
            modalContent.innerHTML = ''; // Clear previous content
            
            // Loop through data and create table rows
            data.forEach(function(entry) {
                function formatDate(dateString) {
                const [year, month, day] = dateString.split('-');
                return `${day}/${month}/${year}`;
                }
                function addRS(amount) {
                return `R$ ${amount}`;
                }
                
                modalContent.innerHTML += `
                <tr class="${entry.type === 'Despesa' ? 'red' : 'green'}" ${entry.status === 'Cancelada' ? 'style="text-decoration:line-through"' : ''}>
                    <td class="id">${entry.id}</td>
                    <td>${entry.type}</td>
                    <td>${entry.categories}</td>
                    <td>${entry.description}</td>
                    <td>${addRS(entry.value)}</td>
                    <td>${formatDate(entry.due_date)}</td>
                    <td>${formatDate(entry.payment_date)}</td>
                    <td>${entry.account}</td>
                    <td>${entry.status}</td>
                </tr>`;
            });
        }
        function populateModalOverdue(data) {
            var modalContent = document.querySelector('.tbody-overdue');
            modalContent.innerHTML = ''; // Clear previous content
            
            // Loop through data and create table rows
            data.forEach(function(entry) {
                function formatDate(dateString) {
                const [year, month, day] = dateString.split('-');
                return `${day}/${month}/${year}`;
                }
                function addRS(amount) {
                return `R$ ${amount}`;
                }
                
                modalContent.innerHTML += `
                <tr class="${entry.type === 'Despesa' ? 'red' : 'green'}" ${entry.status === 'Cancelada' ? 'style="text-decoration:line-through"' : ''}>
                    <td class="id">${entry.id}</td>
                    <td>${entry.type}</td>
                    <td>${entry.categories}</td>
                    <td>${entry.description}</td>
                    <td>${addRS(entry.value)}</td>
                    <td>${formatDate(entry.due_date)}</td>
                    <td>${formatDate(entry.payment_date)}</td>
                    <td>${entry.account}</td>
                    <td>${entry.status}</td>
                </tr>`;
                
            });
        }
        // Abrir a modal
    function openModal(today, overdue) {
        populateModalToday(today);
        populateModalOverdue(overdue);
        document.getElementById("myModal").style.display = "block";
    }
    
    // Fechar a modal quando o usuário clica no botão fechar (x)
    document.getElementsByClassName("close")[0].onclick = function() {
      document.getElementById("myModal").style.display = "none";
    }
    
    // Fechar a modal quando o usuário clica fora dela
    window.onclick = function(event) {
      if (event.target == document.getElementById("myModal")) {
        document.getElementById("myModal").style.display = "none";
      }
    }
    </script>

<footer>&nbsp;</footer>
</body>
</html>





